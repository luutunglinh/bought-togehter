<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="res_config_settings_youtube_api" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Youtube Config" string="Youtube Config">
                        <h2>Youtube Config</h2>
                        <div class="row o_settings_container mt16">
                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="google_client_id" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Youtube API Key
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="google_client_id"/>
                                </div>
                            </div>

                            <div class="col-md-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="google_client_secret" class="oe_inline o_form_label"/>
                                    <div class="text-muted">
                                        Youtube API Secret
                                    </div>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="google_client_secret"/>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>