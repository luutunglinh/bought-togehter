<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="google_access_token_form" model="ir.ui.view">
            <field name="name">google.access.token.form</field>
            <field name="model">google.access.token</field>
            <field name="arch" type="xml">
                <form string="Google Access Token">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="display_name"/>
                            <field name="access_token"/>
                            <field name="access_token_expiry"/>
                            <field name="refresh_token"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="google_access_token" model="ir.ui.view">
            <field name="name">google.access.token.tree</field>
            <field name="model">google.access.token</field>
            <field name="arch" type="xml">
                <tree string="Access Token">
                    <field name="name"/>
                    <field name="display_name"/>
                    <field name="access_token"/>
                    <field name="access_token_expiry"/>
                    <field name="refresh_token"/>
                </tree>
            </field>
        </record>

        <record id="google_access_token_action" model="ir.actions.act_window">
            <field name="name">Google Access Token</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">google.access.token</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="google_root"
                  name="Google Access Token"
                  sequence="30"
        />

        <menuitem
                name="Youtube"
                id="google_access_token_action_menu"
                parent="google_root"
                action="google_access_token_action"
                sequence="33"
        />

    </data>
</odoo>